<%=form_for @lead, html: {role: "form"} do |f|%>
    <div class="form-group">
      <br>
      <div class="row">
        <div class="col-lg-12">
          <%=f.label :name%>
          <%=f.text_field :name, class: 'form-control' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-lg-12">
          <%=f.label :phone_number%>
          <%=f.text_field :phone_number, class: 'form-control' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-lg-12">
          <%=f.label :email%>
          <%=f.text_field :email, class: 'form-control' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-lg-12">
          <%=f.label :password%>
          <%=f.password_field :password, class: 'form-control' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-lg-12">
          <%=f.submit "Register", class: "btn-block" %>
        </div>
      </div>
    </div>
<%end%>
